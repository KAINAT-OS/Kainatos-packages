#!/usr/bin/env bash
#
# InstallAppImage.sh
# Usage (in Dolphin ServiceMenu or standalone): /path/to/InstallAppImage.sh "%u"

set -euo pipefail

APPIMAGE="${1:-}"
if [[ -z "$APPIMAGE" ]]; then
    kdialog --error "No AppImage file specified."
    exit 1
fi

BASENAME="$(basename "$APPIMAGE")"
APP_NAME="${BASENAME%.*}"

# 1) Choose install scope
SCOPE=$(kdialog --title "Install AppImage" \
    --menu "Install '$APP_NAME' for:" \
      system "All users (system‑wide)" \
      user   "Only this user")
# Cancelled?
if [[ $? -ne 0 ]]; then
    exit 1
fi

# 2) If system‑wide, prompt for sudo password via kdialog
if [[ "$SCOPE" == "system" ]]; then
    SUDOPW=$(kdialog --title "Authentication Required" \
             --password "Enter your sudo password:")
    if [[ -z "$SUDOPW" ]]; then
        kdialog --error "No password entered; aborting."
        exit 1
    fi
    SUDO_CMD="sudo -S -p ''"
fi

# 3) Copy AppImage & chmod
if [[ "$SCOPE" == "system" ]]; then
    echo "$SUDOPW" | $SUDO_CMD cp "$APPIMAGE" "/usr/bin/$BASENAME"
    echo "$SUDOPW" | $SUDO_CMD chmod +x "/usr/bin/$BASENAME"
    DEST_PATH="/usr/bin/$BASENAME"
    DESKTOP_DIR="/usr/share/applications"
else
    mkdir -p "$HOME/bin"
    cp "$APPIMAGE" "$HOME/bin/$BASENAME"
    chmod +x "$HOME/bin/$BASENAME"
    DEST_PATH="$HOME/bin/$BASENAME"
    DESKTOP_DIR="$HOME/.local/share/applications"
fi

# 4) Create applications directory if needed
if [[ "$SCOPE" == "system" ]]; then
    echo "$SUDOPW" | $SUDO_CMD mkdir -p "$DESKTOP_DIR"
else
    mkdir -p "$DESKTOP_DIR"
fi

# 5) Write the .desktop file
DESKTOP_PATH="$DESKTOP_DIR/$APP_NAME.desktop"

if [[ "$SCOPE" == "system" ]]; then
    echo "$SUDOPW" | $SUDO_CMD bash -c "cat > '$DESKTOP_PATH' <<EOF
[Desktop Entry]
Type=Application
Name=$APP_NAME
Exec=$DEST_PATH %u
Icon=$APP_NAME
Terminal=false
Categories=Utility;
EOF"
    echo "$SUDOPW" | $SUDO_CMD chmod 644 "$DESKTOP_PATH"
else
    cat > "$DESKTOP_PATH" <<EOF
[Desktop Entry]
Type=Application
Name=$APP_NAME
Exec=$DEST_PATH %u
Icon=$APP_NAME
Terminal=false
Categories=Utility;
EOF
fi

# 6) Clear sensitive data
unset SUDOPW

# 7) Notify user
kdialog --title "Installation Complete" \
        --msgbox "'$APP_NAME' has been installed successfully."

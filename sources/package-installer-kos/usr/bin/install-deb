#!/usr/bin/env bash

# Usage: install-deb.sh <path-to-deb-file>
if [ $# -ne 1 ]; then
    echo "Usage: $0 <.deb file>" >&2
    exit 2
fi

DEBFILE="$1"

# 1) Try to install the .deb
if dpkg -i --force-confnew "$DEBFILE"; then
    echo "âœ… Installed $DEBFILE successfully."
    exit 0
else
    echo "âš ï¸  dpkg -i failed. Attempting to repairâ€¦"
    # 2) Fix broken dependencies / configure remains
    if dpkg --configure -a; then
        echo "ðŸ”§ Repair successful."
        exit 0
    else
        echo "âŒ Repair failed." >&2
        exit 1
    fi
fi

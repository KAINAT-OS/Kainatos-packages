[Compositing]
# Enable lightweight OpenGL compositing
Enabled=true
Backend=OpenGL
OpenGLIsUnsafe=false
# Cap FPS to match typical gaming monitors
#MaxFPS=144
# Disable desktop animations
AnimationSpeed=0.0
# Allow tearing (benefits high-FPS gaming with vsync off)
AllowTearing=true
# Let fullscreen apps suspend compositing automatically
UnredirectFullScreen=true
# Use nearest-neighbor scaling for minimal overhead
ScaleMethod=Nearest

[Plugins]
# Disable all non-essential effects for performance
blurEnabled=false
cubeEnabled=false
desktopGridEnabled=false
dimInactiveEnabled=false
presentWindowsEnabled=false
ringSwitchEnabled=false
scaleEnabled=false
thumbWindowsEnabled=false
windowAppSwitcherEnabled=false
zoomEnabled=false
